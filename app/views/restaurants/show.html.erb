<div class="mb-3 p-5">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>
</div>

<div class="mb-3 p-5" >
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <div class="row">
        <li class="list-group-item d-flex justify-content-between align-items-start col-3 col- m-3"><%= review.content %></li>
        <span class="badge bg-primary rounded-pill col-3 col- m-3"><%= review.rating %></span>
      </div>
    <% end %>
  </ul>
  <br>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
  <%= link_to "Back to restaurants",  restaurants_path %>

</div>
