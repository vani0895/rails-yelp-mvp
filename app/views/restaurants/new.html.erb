<div class="mb-3 p-5">
  <h1>New restaurant</h1>
  <%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>
  <%= f.submit %>
  <% end %>
  <%= link_to "See details", new_restaurant_path(@restaurant), class: "btn btn-primary"%>
</div>
